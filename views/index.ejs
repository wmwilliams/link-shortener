<!DOCTYPE html>
<html>
<head>
	<title>Link Shortener</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
</head>
<body>
	<h1 class="text-center">Just copy and paste long links here, and then use short link provided.</h1>

	<div class="container-fluid">
		<form class="col-md-6 col-md-offset-3 text-center" method="POST" action="/">
			<input class="input-lg" type="text" name="URL" placeholder="Enter URL">
			<input type="submit">
		</form>
	</div>

	<section class="container-fluid text-center">
		<% linksArray.forEach(function(value) { %>
			<div>
			<a class="text-center" href="/search/<%= value.hash %>">http://localhost:3500/search/<%= value.hash %></a>
			</div>
		<% }); %>
	</section>


</body>
</html>